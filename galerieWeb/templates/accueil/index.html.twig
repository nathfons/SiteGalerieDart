{% extends 'basemenu.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block contentPage %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="content">
    <h2 align="center">Artistes à la une </h2>
<div align="center" id="carouselArtistesControls" class="carousel slide" data-ride="carousel">
  <div align="center" class="carousel-inner">
  {% for artiste in artistes %}
    <div align="center" class="carousel-item">
                <div class="border border-dark rounded p-2 clearfix">
                    <h2>
                        {{ artiste.prenom }}
                        -
                        {{ artiste.nom }}
                        
                    </h2>
                    <img align="center" class="img-fluid rounded" src="{{asset(artiste.photographie)}}" alt="Image de {{ artiste.nom }}">

                    <hr>
                    <a href="{{ path('artiste_detail', {'id': artiste.id}) }}" class="btn btn-success float-right">
                        Voir
                    </a>
                </div>

            </div>
        {% endfor %}
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
        

    <h2 align="center">Newsletter </h2>
    <h2 align="center">Produits Phares </h2>
     <div class="content">
    <div class="row">
        {% for produit in produits %}
            <div class="col-4 mt-4">
                <div class="border border-dark rounded p-2 clearfix">
                    <h2>
                        {{ produit.nomProduit }}
                        -
                        {{ produit.prixHT }}
                        €
                    </h2>
                <img align="center" class="img-fluid rounded" src="{{ asset(produit.miniature) }}" alt="Image de {{ produit.nomProduit }}">

                    <hr>
                    <a href="{{ path('produit_detail', {'id': produit.id}) }}" class="btn btn-success float-right">
                        Voir
                    </a>
                    <a href="{{ path('panierAdd', {'id': produit.id}) }}" class="btn btn-success float-right">
                        <i class="fas fa-shopping-cart mr-1"></i>
                        Ajouter
                    </a>
                </div>

            </div>
        {% endfor %}
    </div>
</div>
</div>
{% endblock %}

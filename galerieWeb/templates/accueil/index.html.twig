{% extends 'basemenu.html.twig' %}

{% block title %}Galerie d'Art{% endblock %}

{% block contentPage %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="content">
    <h2 align="center">Artistes à la une </h2>
 
    </div>
    <div class="content">
<div id="myCarousel" class="carousel slide content" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
    
    {% for artiste in artistes %}
      <li data-target="#myCarousel" data-slide-to="artiste.id" class="active"></li>
      {% endfor %}
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner ">
    <div align="center" class="carousel-item">
    
    {% for artiste in artistes %}
      <div class="item active">
                    <h2>
                        {{ artiste.prenom }}
                        -
                        {{ artiste.nom }}
                        
                    </h2>
                    <img align="center" class="img-fluid rounded" src="{{asset(artiste.photographie)}}" alt="Image de {{ artiste.nom }}">

                    <hr>
                    <a href="{{ path('artiste_detail', {'id': artiste.id}) }}" class="btn btn-success float-right">
                        Voir
                    </a>
                </div>

        {% endfor %}
            </div>
     </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="{{ path('commande_detail') }}" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="{{ path('commande_detail') }}" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>



        

    <h2 align="center">Newsletter </h2>
    <h2 align="center">Produits Phares </h2>
     <div class="content">
    <div class="row">
        {% for produit in produits %}
            <div class="col-4 mt-4">
                <div class="border border-dark rounded p-2 clearfix">
                    <h2>
                        {{ produit.nomProduit }}
                        -
                        {{ produit.prixHT }}
                        €
                    </h2>
                <img align="center" class="img-fluid rounded" src="{{ asset(produit.miniature) }}" alt="Image de {{ produit.nomProduit }}">

                    <hr>
                    <a href="{{ path('produit_detail', {'id': produit.id}) }}" class="btn btn-success float-right">
                        Voir
                    </a>
                    <a href="{{ path('panierAdd', {'id': produit.id}) }}" class="btn btn-success float-right">
                        <i class="fas fa-shopping-cart mr-1"></i>
                        Ajouter
                    </a>
                </div>

            </div>
        {% endfor %}
    </div>
</div>
</div>
{% endblock %}

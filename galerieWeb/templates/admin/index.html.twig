{% extends 'admin/adminbase.html.twig' %}

{% block partadmin %}

{% block contentPage %}
    <h1>Produits en attente d'approbation</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TypeProduit</th>
                <th>NomProduit</th>
                <th>Categorie</th>
                <th>Artiste</th>
                <th>Produit Original</th>
                <th>DateCreation</th>
                <th>Descriptif</th>
                <th>Dimension</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produitsNonApprouves %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.typeProduit }}</td>
                <td>{{ produit.nomProduit }}</td>
                <td>{{ produit.categorie.nomcategorie }}</td>
                <td>{{ produit.artiste.nom }}</td>
                {% if produit.produitoriginal!= null %}
                <td>{{ produit.produitoriginal.nomProduit }}</td>
                {% else %}
                <td></td>
                {% endif %}
                <td>{{ produit.dateCreation ? produit.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ produit.descriptif }}</td>
                <td>{{ produit.dimension }}</td>
                
                <td>
                    <a href="{{ path('produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>
                    {{ include('produit/_approve_form.html.twig') }}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="19">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% endblock %}



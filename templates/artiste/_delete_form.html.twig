<form method="post" action="{{ path('artiste_delete', {'id': artiste.id}) }}" onsubmit="return confirm('Voulez-vous supprimer ce compte?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ artiste.id) }}">
    <span class="glyphicon glyphicon-trash text-danger"></span>
    <button class="btn" class="text-danger">Supprimer le compte</button>
</form>

{% extends 'basemenu.html.twig' %}

{% block title %}Galerie d'Art{% endblock %}

{% block contentPage %}
<style>
    .alaune-wrapper { margin: 1em auto; max-width: 800px; width: 65%; font: 18px/1.5 sans-serif; }
    .alaune-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="content">
    <h2 align="center">Artistes à la une </h2>
 
    </div>
    <div class="content">

<div id="carouselIndicators" class="carousel slide  alaune-wrapper" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselIndicators" data-slide-to="1"></li>
    <li data-target="#carouselIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="{{asset(artistes[0].photographie)}}" alt="First slide">
      <div class="carousel-caption">
                    <h2>
                        {{ artistes[0].prenom }}
                        -
                        {{ artistes[0].nom }}
                        
                    </h2>
                    <hr>
                    <a href="{{ path('artiste_detail', {'id': artistes[0].id}) }}" class="btn btn-success float-center">
                        Voir
                    </a>
                </div>
               
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="{{asset(artistes[1].photographie)}}" alt="Second slide">
      <div class="carousel-caption">
                    <h2>
                        {{ artistes[0].prenom }}
                        -
                        {{ artistes[0].nom }}
                        
                    </h2>
                    <hr>
                    <a href="{{ path('artiste_detail', {'id': artistes[0].id}) }}" class="btn btn-success float-center">
                        Voir
                    </a>
                </div>
               
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="{{asset(artistes[2].photographie)}}" alt="Third slide">
      <div class="carousel-caption">
                    <h2>
                        {{ artistes[0].prenom }}
                        -
                        {{ artistes[0].nom }}
                        
                    </h2>
                    <hr>
                    <a href="{{ path('artiste_detail', {'id': artistes[0].id}) }}" class="btn btn-success float-center">
                        Voir
                    </a>
                </div>
               
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

        

    <h2 align="center">Newsletter </h2>
    <h2 align="center">Produits Phares </h2>
     <div class="content">
    <div class="row">
        {% for produit in produits %}
            <div class="col-4 mt-4">
                <div class="border border-dark rounded p-2 clearfix">
                    <h2>
                        {{ produit.nomProduit }}
                        -
                        {{ produit.prixHT }}
                        €
                    </h2>
                <img align="center" class="img-fluid rounded" src="{{ asset(produit.miniature) }}" alt="Image de {{ produit.nomProduit }}">

                    <hr>
                    <a href="{{ path('produit_detail', {'id': produit.id}) }}" class="btn btn-success float-right">
                        Voir
                    </a>
                    <a href="{{ path('panierAdd', {'id': produit.id}) }}" class="btn btn-success float-right">
                        <i class="fas fa-shopping-cart mr-1"></i>
                        Ajouter
                    </a>
                </div>

            </div>
        {% endfor %}
    </div>
</div>
</div>
{% endblock %}

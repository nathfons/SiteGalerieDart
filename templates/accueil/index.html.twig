{% extends 'basemenu.html.twig' %}

{% block title %}Galerie d'Art{% endblock %}

{% block contentPage %}
<style>
    .alaune-wrapper { margin: 1em auto; max-width: 800px; width: 65%; font: 18px/1.5 sans-serif; }
    .alaune-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="content">
    <h2 align="center">Artistes à la une </h2>
 
    </div>
    <div class="content">
<div id="myCarousel" class="carousel slide carousel-fade alaune-wrapper" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
    
    {% for artiste in artistes %}
    
        {% if  loop.index0  == 0 %}
            <li data-target="#myCarousel" data-slide-to="{{ loop.index0 }}"  class="active"  ></li>
      {% else %}

            <li data-target="#myCarousel" data-slide-to="{{ loop.index0 }} " ></li>
      {% endif %}
      {% endfor %}
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner "  role="listbox">
    
    {% for artiste in artistes %}
    {% if  loop.index0  == 0 %}
      <div class="icarousel-item active">
      {% else %}

      <div class="carousel-item ">
      {% endif %}
      
      <div class="view">
        <img class="d-block w-100" align="center"  src="{{asset(artiste.photographie)}}" alt="Image de {{ artiste.nom }}">
        </div>
       <div class="carousel-caption">
                    <h2>
                        {{ artiste.prenom }}
                        -
                        {{ artiste.nom }}
                        
                    </h2>
                    <hr>
                    <a href="{{ path('artiste_detail', {'id': artiste.id}) }}" class="btn btn-success float-center">
                        Voir
                    </a>
                </div>
               

        </div>

        {% endfor %}
     </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>



        

    <h2 align="center">Newsletter </h2>
    <h2 align="center">Produits Phares </h2>
     <div class="content">
    <div class="row">
        {% for produit in produits %}
            <div class="col-4 mt-4">
                <div class="border border-dark rounded p-2 clearfix">
                    <h2>
                        {{ produit.nomProduit }}
                        -
                        {{ produit.prixHT }}
                        €
                    </h2>
                <img align="center" class="img-fluid rounded" src="{{ asset(produit.miniature) }}" alt="Image de {{ produit.nomProduit }}">

                    <hr>
                    <a href="{{ path('produit_detail', {'id': produit.id}) }}" class="btn btn-success float-right">
                        Voir
                    </a>
                    <a href="{{ path('panierAdd', {'id': produit.id}) }}" class="btn btn-success float-right">
                        <i class="fas fa-shopping-cart mr-1"></i>
                        Ajouter
                    </a>
                </div>

            </div>
        {% endfor %}
    </div>
</div>
</div>
{% endblock %}

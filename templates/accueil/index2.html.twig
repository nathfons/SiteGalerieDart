                    <h2>
                        {{ artistes[0].prenom }}
                        -
                        {{ artistes[0].nom }}
                        
                    </h2>
                    <hr>
                    <a href="{{ path('artiste_detail', {'id': artistes[0].id}) }}" class="btn btn-success float-center">

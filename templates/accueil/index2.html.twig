{% extends 'basemenu.html.twig' %}

{% block title %}<h1>Galerie d'Art</h1>{% endblock %}

{% block contentPage %}
<style>
    .alaune-wrapper { margin: 1em auto; max-width: 800px; width: 65%; font: 18px/1.5 sans-serif; }
